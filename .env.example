# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# OpenAI Configuration (Text to Speech ve Speech to Text için)
# OpenAI API anahtarını https://platform.openai.com/api-keys adresinden alabilirsiniz
OPENAI_API_KEY=your-openai-api-key-here

# OpenRouter Configuration (AI Chat için)
# OpenRouter API anahtarını https://openrouter.ai/keys adresinden alabilirsiniz
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_URL=https://openrouter.ai/api/v1
# Tercih edilen model kullanılamadığında yedek olarak kullanılacak model
CHAT_FALLBACK_MODEL=google/gemini-pro
# Ana sohbet modeli
CHAT_MODEL=openai/gpt-4

# Google Text-to-Speech Configuration
GOOGLE_TTS_API_KEY=your-google-tts-api-key-here
GOOGLE_TTS_LANGUAGE_CODE=en-US
GOOGLE_TTS_VOICE=en-US-Standard-A

# Text-to-Speech Provider Selection
# Kullanılabilir değerler: 'google' veya 'openai'
TTS_PROVIDER=google

# Cache Configuration
CACHE_TTL=3600 # 1 saat (saniye cinsinden) 
